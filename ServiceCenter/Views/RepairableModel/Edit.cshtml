@model RepairableModel
@{
    ViewData["Title"] = "Редактировать модель";
}

<h2>Редактировать модель автомобиля</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название модели</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Производитель</label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Features" class="control-label">Особенности</label>
        <textarea asp-for="Features" class="form-control"></textarea>
        <span asp-validation-for="Features" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</form>