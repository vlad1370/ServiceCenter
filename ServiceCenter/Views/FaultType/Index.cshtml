@model IEnumerable<FaultType>
@{
    ViewData["Title"] = "Виды неисправностей";
    var modelsList = ViewBag.Models as SelectList;
}

<h2>Виды неисправностей</h2>

<div class="d-flex align-items-end gap-3 mb-3">
    <div>
        <a asp-action="Create" class="btn btn-success">Добавить неисправность</a>
    </div>

    <!-- Поиск по модели -->
    <div>
        <div class="input-group w-auto">
            <label for="modelFilter" class="form-label"></label>
            <select id="modelFilter" class="form-select">
                <option value="">Все модели</option>
                @if (modelsList != null)
                {
                    foreach (var modelItem in modelsList)
                    {
                        <option value="@modelItem.Value" selected="@modelItem.Selected">
                            @modelItem.Text
                        </option>
                    }
                }
            </select>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Описание</th>
            <th>Стоимость ремонта</th>
            <th>Модель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody id="faultsTable">
        @foreach (var item in Model)
        {
            <tr data-model-id="@item.ModelId">
                <td>@item.Description</td>
                <td>@item.RepairCost.ToString("N2")</td>
                <td>@item.Model?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Фильтрация при изменении выбора модели
            $('#modelFilter').change(function () {
                var selectedModelId = $(this).val();
                var currentUrl = new URL(window.location.href);

                if (selectedModelId === '') {
                    currentUrl.searchParams.delete('modelId');
                } else {
                    currentUrl.searchParams.set('modelId', selectedModelId);
                }

                // Переходим на тот же URL с новым параметром
                window.location.href = currentUrl.toString();
            });
        });
    </script>
}