@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Сотрудники";
}

<h2>Список сотрудников</h2>

<form method="get">
    <div class="d-flex align-items-end gap-3 mb-3">
        <div>
            <a asp-action="Create" class="btn btn-success">Добавить сотрудника</a>
        </div>

        <!-- Поиск по должности -->
        <div class="input-group w-auto">
            <select name="positionFilter" class="form-select" onchange="this.form.submit()">
                <option value="">Все должности</option>
                @if (ViewBag.Positions != null)
                {
                    foreach (var position in ViewBag.Positions)
                    {
                        if (position == ViewBag.SelectedPosition)
                        {
                            <option value="@position" selected>@position</option>
                        }
                        else
                        {
                            <option value="@position">@position</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Должность</th>
            <th>Телефон</th>
            <th>Возраст</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.Phone</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>